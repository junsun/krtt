<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg" >

    <ImageView 
	    android:layout_width="170dip"
	    android:layout_height="50dip"
	    android:src="@drawable/auth_tit_step1"
	    android:layout_marginTop="15dip"
	    android:layout_marginLeft="25dip"
        android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"/>
    
    
    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		android:layout_marginTop="100dip"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:weightSum="1" >

        <EditText
	        android:id="@+id/user_auth_email_txt"
	        android:layout_width="0dip"
	        android:layout_height="55dip"
	        android:hint="Email을 입력해주세요" 
	        android:layout_weight="0.6"/>
	
        <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="50dip"
	        android:orientation="horizontal"
			android:gravity="center_vertical|right" 
	        android:layout_weight="0.4"
	        android:weightSum="1" >
	        
            
		    <Button
		        android:id="@+id/user_auth_email"
		        android:layout_width="0dip"
		        android:layout_height="50dip"
	        	android:layout_weight="0.9"
		        android:text="인증번호 발송" 
		        android:textSize="18sp"
		        android:background="@color/btn_userauth_blue"
		        android:textColor="@color/white"
		        android:alpha="0.8"/>
		    
	     </LinearLayout>
    </LinearLayout>

   

    <EditText
        android:id="@+id/user_auth_id_txt"
        android:layout_width="300dip"
        android:layout_height="55dip"
		android:layout_marginBottom="300dip"
        android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
        android:hint="인증번호를 입력해주세요" />

    <Button
        android:id="@+id/user_auth_id"
        android:layout_width="290dip"
        android:layout_height="50dip"
		android:layout_marginBottom="240dip"
        android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
        android:text="인증하기"
        android:textSize="20sp"
        android:background="@color/btn_userauth_blue"
        android:textColor="@color/white"
        android:alpha="0.8" />

</RelativeLayout>