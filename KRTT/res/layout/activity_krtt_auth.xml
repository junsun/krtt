<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg" >

    <ImageView 
	    android:layout_width="170dip"
	    android:layout_height="50dip"
	    android:src="@drawable/auth_tit_step2"
	    android:layout_marginTop="15dip"
	    android:layout_marginLeft="25dip"
        android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"/>
   

    <EditText
        android:id="@+id/krtt_auth_id_txt"
        android:layout_width="300dip"
        android:layout_height="55dip"
		android:layout_marginTop="100dip"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:hint="KRTT 인증문자를 입력해주세요" />

    <Button
        android:id="@+id/krtt_auth_id"
        android:layout_width="290dip"
        android:layout_height="50dip"
		android:layout_marginTop="165dip"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:text="인증하기"
        android:textSize="20sp"
        android:background="@color/btn_userauth_blue"
        android:textColor="@color/white"
        android:alpha="0.8" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="230dip"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:text="@string/krtt_auth_help"
        android:textColor="@color/white"/>

</RelativeLayout>